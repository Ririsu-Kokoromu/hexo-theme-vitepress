<post>
    <postList>
        <div class="list">
            <span>
                <a href="/post">文章列表</a>
            </span>
            <% if (site.posts && site.posts.length) { %>
                <% site.posts.each(function (post) { %>
                    <section>
                        <a href="<%- url_for(post.path) %>">
                            <%= post.title %>
                        </a>
                    </section>
                <% }) %>
            <% } %>
        </div>
    </postList>
    <article>
        <div class="post">
            <div class="post-title">
                <h2 class="title">
                    <%= page.title %>
                </h2>
            </div>
            <div class="post-meta">
                <span class="post-time"><%- date(page.date, "YYYY-MM-DD" ) %></span>
            </div>
            <div class="post-content">
                <%- page.content %>
            </div>
        </div>
    </article>
    <toc>
        <div class="toc">
            <p>目录</p>
            <%- toc(page.content) %>
        </div>
    </toc>
</post>